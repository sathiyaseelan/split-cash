<% if @users %>
  <% if @users.size > 0 %>
    <h3>Search Results</h3>
    <div id="user-lookup-results" class="well results-block col-md-10">
    <table class="search-results-table col-md-12">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><strong><%= user.full_name %></strong></td>
        <td><strong><%= user.email %></strong></td>
        <td>
          <%= link_to "View Profile", '', class: "btn btn-xs btn-success" %>
          <%= link_to "Add as my user", '',
                class: 'btn btn-xs btn-success', method: :post %>
            <span class='label label-primary'>You are users</span>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
    <div class="center">
    <%= paginate @users, :remote => true, html:{type: :submit} %>
  </div>
    </div>
    <% else %>
      <p class="lead col-md-12">
      No people match this search criteria
      </p>
    <% end %>
<% end %>
